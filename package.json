{
  "name": "splice-scraper",
  "version": "1.0.0",
  "description": "Web scraper for downloading Splice samples with audio recording",
  "scripts": {
    "dev": "tsx ./src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist out lib",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run clean"
  },
  "main": "dist/index.js",
  "dependencies": {
    "cheerio": "^1.1.2",
    "cli-progress": "^3.12.0",
    "puppeteer": "^24.23.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^24.7.1",
    "@types/yargs": "^17.0.33",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
